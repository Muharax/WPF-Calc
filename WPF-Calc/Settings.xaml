<Window x:Class="WPF_Calc.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calc"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="270" FontFamily="Bahnschrift Light" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Grid x:Name="MAIN" Height="390" VerticalAlignment="Top">
        <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bahnschrift Light" Margin="0,25,0,0"><Run Text="Appearance"/></TextBlock>
        <CheckBox x:Name="chkDarkMode" Content="Dark Mode" Margin="12,50,151,0" Checked="chkDarkMode_Checked" Unchecked="chkDarkMode_Unchecked" VerticalAlignment="Top" BorderThickness="1,1,1,1" ClipToBounds="True" SnapsToDevicePixels="True" Height="20"/>
        <TextBlock FontSize="16" Margin="0,68,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Text="Language"/></TextBlock>
        <ComboBox x:Name="cmbLanguage" SelectionChanged="cmbLanguage_SelectionChanged" Margin="14,92,0,282" HorizontalAlignment="Left" Width="158">
            <ComboBoxItem Content="Polish" Tag="pl-PL"/>
            <ComboBoxItem Content="English" Tag="pl-PL"/>
        </ComboBox>
    </Grid>
    
</Window>